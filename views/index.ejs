<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shrinker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container my-5">
        <h1 class="text-center">URL Shrinker</h1>
        
        <!-- URL input form -->
        <form action="/shortUrls" method="POST" class="my-4 d-flex justify-content-center">
            <div class="input-group w-50">
                <input type="url" name="fullURL" id="fullURL" class="form-control" placeholder="Enter a URL" required>
                <button type="submit" class="btn btn-primary">Shrink</button>
            </div>
        </form>

        <!-- Table displaying URLs -->
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through each shortUrl in shortUrls -->
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></td>
                        <td><a href="<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
                        <td><%= shortUrl.numClicks %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>
</html>
